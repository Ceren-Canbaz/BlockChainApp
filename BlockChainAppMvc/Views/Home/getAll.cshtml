@model IEnumerable<BlockChainAppMvc.Models.Coin>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.coinName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coinValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.changePerDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.coinName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.coinValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.changePerDay)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
