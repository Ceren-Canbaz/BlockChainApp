
@{
    ViewBag.Title = "Trade";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row mt-3">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">SATIN AL</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <div class="input-group">
                        <select class="form-select" id="inputGroupSelect04" aria-label="Example select with button addon">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <button class="btn btn-outline-secondary" type="button" onclick="alert('İşleminiz gerçekleşti!'); return true">BUY</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">SAT</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <div class="input-group">
                        <select class="form-select" id="inputGroupSelect04" aria-label="Example select with button addon">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <button class="btn btn-outline-secondary" type="button" onclick="alert('İşleminiz gerçekleşti!'); return true">SALE</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <br />
    <br />
    <br />
    <br />


    <div class="row mt-3" style="margin-bottom:5rem; margin-top:5rem;">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Dönüştür</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <div class="input-group">
                        <div class="form-group center">
                            <label for="">Enter Value:</label>
                            <input type="number" class="amount form-control" placeholder="Enter value" min="1">
                        </div>
                        <div class="form-group inline-block">
                            <label for="">From currency:</label>
                            <select class="currency-list form-control" onclick="exchangeCurrency()" style="margin-left:0.5rem;">
                                <option>--Select--</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-2">
            <img src="https://cdn-icons-png.flaticon.com/512/4950/4950398.png" style="width:150px; height:150px; margin-top:2rem; ">
        </div>

        <div class="col-sm-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">SAT</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <div class="input-group">
                        <div class="form-group inline-block">
                            <label>To currency:</label>
                            <select class="currency-list form-control" onclick="exchangeCurrency()">
                                <option>--Select--</option>
                            </select>
                        </div>

                        <p class="results">0</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

